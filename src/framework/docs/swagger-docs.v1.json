{
    "openapi": "3.0.0",
    "info": {
      "title": "PetCare API",
      "version": "v1",
      "description": "API para gestionar usuarios y sus mascotas."
    },
    "paths": {
      "/register": {
        "post": {
          "summary": "Registrar un nuevo usuario",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "required": ["email", "password"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Usuario registrado exitosamente"
            },
            "400": {
              "description": "Error en el registro"
            }
          }
        }
      }
    }
  }
  